{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",        // Changed to NodeNext for better Node.js 18 compatibility
    "moduleResolution": "NodeNext", // Changed to NodeNext to match module
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    }
  },
  "include": [
    "function/**/*",
    "auth/**/*",
    "src/**/*"
  ]
}
