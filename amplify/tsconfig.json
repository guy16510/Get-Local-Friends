{
  "compilerOptions": {
    "target": "ES2020",                      // Downgraded for AWS Lambda compatibility
    "module": "CommonJS",                    // AWS Lambda prefers CommonJS
    "moduleResolution": "bundler",           // Kept as-is from your original config
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,                    // Ignore type issues in node_modules
    "declaration": true,                     // Generate .d.ts files
    "declarationMap": true,                  // Better debugging support
    "outDir": "dist",                        // Compile output folder
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    }
  },
  "include": [
    "function/**/*",
    "auth/**/*"
  ]
}