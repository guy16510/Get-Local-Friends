{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",                      // Required for 'bundler' resolution
    "moduleResolution": "bundler",           // TypeScript 5.x compatible
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    }
  },
  "include": [
    "function/**/*",
    "auth/**/*",
    "src/**/*"
  ]
}